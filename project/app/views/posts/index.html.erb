<h1>Project Management</h1>
<p>
 <%= will_paginate @posts, previous_label: ("prev"), next_label: ("next") %>
</p>

<table>

  <tr>

    <th>Title</th>
    <th>Text</th>
    <th>Pic</th>
    <th>Count Down</th>
    <th></th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @posts.each do |post| %>
  
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= image_tag post.photo.url(:thumb) %></td>    
        <td><%= ((post.date.to_time - Time.now) / (3600 * 24)).to_i if post.date.present? %> Days left</td>

        <td>  <%#= form.check_box :completed %></td>

        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?'} %>
        </td>
      </tr>


  <% end %>


</table>
<%= link_to 'New', new_post_path %>
